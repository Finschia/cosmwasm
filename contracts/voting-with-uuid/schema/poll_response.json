{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PollResponse",
  "type": "object",
  "required": [
    "creator",
    "description",
    "status"
  ],
  "properties": {
    "creator": {
      "type": "string"
    },
    "description": {
      "type": "string"
    },
    "end_height": {
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0.0
    },
    "quorum_percentage": {
      "type": [
        "integer",
        "null"
      ],
      "format": "uint8",
      "minimum": 0.0
    },
    "start_height": {
      "type": [
        "integer",
        "null"
      ],
      "format": "uint64",
      "minimum": 0.0
    },
    "status": {
      "$ref": "#/definitions/PollStatus"
    }
  },
  "definitions": {
    "PollStatus": {
      "type": "string",
      "enum": [
        "InProgress",
        "Tally",
        "Passed",
        "Rejected"
      ]
    }
  }
}
